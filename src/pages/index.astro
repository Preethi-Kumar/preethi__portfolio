            <path fill-rule="evenodd" clip-rule="evenodd" d="M14.5919 21.9C14.3919 21.3 14.2783 20.659 14.2783 20C14.2783 19.3409 14.3919 18.6999 14.5919 18.0999V15.509H11.251C10.5737 16.859 10.1874 18.3863 10.1874 20C10.1874 21.6136 10.5737 23.1409 11.251 24.4909L14.5919 21.9Z" fill="white"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M20.187 13.9773C21.6552 13.9773 22.9734 14.4818 24.0097 15.4727L26.8779 12.6046C25.1461 10.9909 22.8825 10 20.187 10C16.2779 10 12.8961 12.2409 11.2506 15.5091L14.5915 18.1C15.3779 15.7364 17.5824 13.9773 20.187 13.9773Z" fill="white"/>
            </svg>
        </a> 
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          
          <div class="relative z-30">
            <img
              src="/assets/images/hero-image.png"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full aspect-[790/790] md:max-w-md mx-auto dark:-translate-y-0.5"
            />
          </div>
          
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <a href="#projects" class="m-0 p-0">
      <Separator text="Check out my projects" />
    </a>
  </div>
  <div class="project">
    <Projects />
    
  </div>
  <Separator text="Experience" />

  <section class="max-w-5xl mx-auto px-7 lg:px-0 main-title">
    <PageHeading
      title="My Experience"
      
    />

    <div class="px-5 py-10">
      {
        experiences.slice(0,2).map((experience) => {
          return (
            <div class="pb-10 border-l border-gray-200 last:border-l-0 dark:border-neutral-700">
              <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
              />
            </div>
          )
        })
      }
    </div>

    <div class="flex items-center justify-center w-full py-5">
      <Button text="View All My Experience" link="/experience" />
    </div>
  </section>
</Layout>


